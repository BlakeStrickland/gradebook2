  <%= radio_button_tag(:user_type, "Teacher") %>
  <%= label_tag(:user_type, "I am a teacher") %>
  <%= radio_button_tag(:user_type, "Parent") %>
  <%= label_tag(:user_type, "I am a Parent") %>
  <%= radio_button_tag(:user_type, "Student") %>
  <%= label_tag(:user_typ, "I am a student") %>

  <%= submit_tag :submit %>
<% end %>
